/**
 * Implements hook_message_create().
 */
function crm_phone_crm_message_create($values, $entity_type = 'crm_message') {
  try {
    $message = entity_create($entity_type, array(
      'type' => 'phone',
    ));
    $wrapper = entity_metadata_wrapper('crm_message_template', $message);
    if (isset($values['channel']) && $wrapper->__isset('crm_message_phone')) {
      $wrapper->crm_message_phone->set($values['channel']);
    }
    if (isset($values['body']) && $wrapper->__isset('crm_message_phone_body')) {
      $wrapper->crm_message_phone_body->set(array('value' => $values['body'], 'format' => 'plain_text'));
    }
    foreach ($values as $key => $value) {
      if ($wrapper->__isset($key)) {
        $wrapper->{$key}->set($value);
      }
    }
  }
  catch (Exception $e) {
    watchdog_exception('crm_phone', $e);
    return FALSE;
  }
  return $message;
}
