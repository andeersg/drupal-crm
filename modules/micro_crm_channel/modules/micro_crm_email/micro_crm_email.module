/**
 * Implements hook_mail().
 */
function micro_crm_email_mail($key, &$message, $params) {

  switch ($key) {
    case 'message':
      $message['subject'] = $params['subject'];
      $formatted_text = $params['body'];
      $message['body'] = check_markup($formatted_text['value'], $formatted_text['format']);
      break;
  }

}
