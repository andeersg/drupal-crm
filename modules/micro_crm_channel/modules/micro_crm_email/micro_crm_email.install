/**
 * Implements hook_install().
 */
function micro_crm_email_install() {

  $t = get_t();
  $field = array(
    'settings' => array(),
    'field_name' => 'field_micro_crm_email',
    'type' => 'email',
    'module' => 'email',
    'active' => 1,
    'locked' => 0,
    'cardinality' => 1,
    'deleted' => 0,
  );
  field_create_field($field);

  $instance = array(
    'label' => $t('E-mail'),
    'widget' => array(
      'weight' => -99,
      'type' => 'email_textfield',
      'module' => 'email',
      'active' => 1,
      'settings' => array(
        'size' => '60',
      ),
    ),
    'settings' => array(
      'user_register_form' => FALSE,
    ),
    'display' => array(
      'default' => array(
        'label' => 'above',
        'type' => 'email_default',
        'settings' => array(),
        'module' => 'email',
        'weight' => -99,
      ),
    ),
    'required' => 1,
    'description' => '',
    'default_value' => NULL,
    'field_name' => 'field_micro_crm_email',
    'entity_type' => 'micro_crm_channel',
    'bundle' => 'email',
    'deleted' => 0,
  );
  field_create_instance($instance);
}

/**
 * Implements hook_uninstall().
 */
function micro_crm_email_uninstall() {

  if ($instance = field_info_instance('micro_crm_channel', 'field_micro_crm_email', 'email')) {
    field_delete_instance($instance);
  }

  if ($instance = field_info_instance('micro_crm_message', 'crm_message_email', 'email')) {
    field_delete_instance($instance);
  }

  if ($instance = field_info_instance('micro_crm_message', 'crm_message_email_subject', 'email')) {
    field_delete_instance($instance);
  }

  if ($instance = field_info_instance('micro_crm_message', 'crm_message_email_body', 'email')) {
    field_delete_instance($instance);
  }

  variable_del('micro_crm_channel_ui_email_newsletter');
}
